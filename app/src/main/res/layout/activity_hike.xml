<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HikeActivity"
    android:gravity="center"
    android:background="@drawable/back3"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/embosedbackground">

    <TextView
        android:id="@+id/textViewStartTimeHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"

        android:gravity="center"
        android:padding="5dp"
        android:text="@string/start_time"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewLocCountHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"

        android:gravity="center"
        android:padding="5dp"
        android:text="@string/number_of_checkpoints"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewGPSCoordinateHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/checkpoint_gps"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewCurrentGPSCoordinateHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/current_gps"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewDistanceTraveledHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/distance_traveled"
        android:textSize="20sp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHikeControl"
        android:clickable="true"
        app:srcCompat="@drawable/baseline_my_location_24"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:contentDescription="@string/start_the_hike"
        app:backgroundTint="#BB8BF3"
        app:elevation="6dp"
        app:fabCustomSize="90dp"
        app:maxImageSize="56dp"
        app:rippleColor="@color/white"
/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddLocation"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:clickable="true"
        android:contentDescription="@string/add_current_location"
        android:visibility="gone"
        app:backgroundTint="#BB8BF3"
        app:elevation="6dp"
        app:fabCustomSize="90dp"
        app:maxImageSize="56dp"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/baseline_add_location_alt_24" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddRemoveLastLocation"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:clickable="true"
        android:contentDescription="@string/remove_last_location"
        android:visibility="gone"
        app:backgroundTint="#BB8BF3"
        app:elevation="6dp"
        app:fabCustomSize="90dp"
        app:maxImageSize="56dp"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/baseline_location_off_24" />


    </LinearLayout>

</LinearLayout>