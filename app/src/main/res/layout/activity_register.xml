<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="4dp"
    android:gravity="center"
    android:padding="4dp"
    android:background="@drawable/back2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/embosedbackground"
            android:backgroundTint="#FCFFFD"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="10dp"
            >

        <EditText
            android:id="@+id/editTextTextRegisterName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:autofillHints="@string/entername"
            android:ems="10"
            android:gravity="left"
            android:hint="@string/entername"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextRegisterEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:autofillHints="@string/hintemail"
            android:ems="10"
            android:gravity="left"
            android:hint="@string/hintemail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:autofillHints="@string/hintpassword"
            android:ems="10"
            android:gravity="left"
            android:hint="@string/hintpassword"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextTextRegisterPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:autofillHints="@string/retypepass"
            android:ems="10"
            android:hint="@string/retypepass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextTextRegisterIDNumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:autofillHints="@string/enterId"
            android:ems="10"
            android:hint="@string/enterId"
            android:inputType="text" />



        <Button
            android:id="@+id/userRegBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/regBtn" />

        </LinearLayout>

</LinearLayout>